#!/bin/sh
# Build API for Sensoray 2600 as a static library

# Compile the API files
gcc -Wall -m32 -c -D OSTYPE_LINUX -D ENDIAN_LITTLE -I ../linux -I ../common -o s26core.o ../common/s26core.c
gcc -Wall -m32 -c -I ../common -o s26mod.o s26mod.c

# Create the library, lib2600.a
ar rcs lib2600.a s26core.o s26mod.o

# Compile the demo application program
gcc -Wall -m32 -g -c -I ../linux -I ../common demo.c -o demo.o

# Create executable demo
gcc -g -m32 -o demo demo.o -L. -l2600
