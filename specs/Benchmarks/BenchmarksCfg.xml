<?xml version="1.0"?>
<!DOCTYPE LOTUS SYSTEM "lotus.dtd">

<!-- Units are in Std International System -->
<lotus>
    <globals>
        <gravity>0.000   0.000   -9.81</gravity> 
    </globals>

    <graphics name="StanbotStdView">
        <camera>
            <pos>4.0   0.0   2.0</pos>
            <lookat>0.0   0.0   0.5</lookat>
            <up>0   0   1</up>
            <clip>0 10</clip>
            <background>0 0 0</background>
        </camera>
        <light>
            <pos>2.0   0.0   0.0</pos>
            <lookat>0.0   0.0   0.5</lookat>
        </light>
        <light>
            <pos>-2.0   0.0   0.0</pos>
            <lookat>0.0   0.0   0.0</lookat>
        </light>
    </graphics>

    <!-- A variety of Puma based robot models to test wbc
         XN = N Pumas attached in series
         PN = N Pumas attached in parallel
         XMPN = N <M-Serial-Pumas> attached in parallel 
         Total dofs = M*N*6
    -->
    <robot name="PumaBot"> 
        <spec>Puma</spec>
        <file>../../specs/Benchmarks/Puma.xml</file>
        <root_link>
            <link_name>ground</link_name>
            <position_in_parent>0.300   0.000   0.000</position_in_parent> 
            <orientation_in_parent>0.000  0.000   0.000   1.000</orientation_in_parent>
        </root_link>
    </robot>

